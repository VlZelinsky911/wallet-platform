FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci && npm cache clean --force

# Copy source code
COPY . .

# Fix permissions
RUN chown -R node:node /app

# Expose port
EXPOSE 3001

# Add non-root user
USER node

# Start in development mode
CMD ["npm", "run", "start:dev"]
